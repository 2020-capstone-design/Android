<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/select_disorder_start_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/select_disorder_start_card"
        android:layout_marginTop="-40dp"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택지에 맞는 메뉴를 추천받고 싶다면 시작하세요!"
            android:checked="true"
            android:clickable="false"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제시되는 2개의 선택지 중 1개를 선택하면 됩니다."
            android:checked="true"
            android:clickable="false"
            android:layout_marginTop="25dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 3단계로 이루어져 있어요!"
            android:checked="true"
            android:clickable="false"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/select_disorder_start_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="23sp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/flag"
            android:padding="10dp"/>


    </LinearLayout>




</LinearLayout>